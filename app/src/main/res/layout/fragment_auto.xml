<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".Auto">

    <!--We are using this image view to display our QR code-->

    <!--Edit text to enter text for creating a QR code-->
        <!--Button for creating a QR code-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/design_default_color_primary_dark"
            android:text="Auto"
            android:textColor="@color/white"
            android:textSize="52dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gridHeader3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Low"
            android:background="@color/red"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="16dp"

            app:layout_constraintEnd_toStartOf="@id/gridView1"
            app:layout_constraintBottom_toBottomOf="@id/gridView1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/gridHeader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Mid"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:background="@color/red"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@id/gridView1"
            app:layout_constraintWidth="match_constraint"
            app:layout_constraintBottom_toTopOf="@+id/gridHeader3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridHeader1" />

        <TextView
            android:id="@+id/gridHeader1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingTop="25dp"
            android:background="@color/red"
            android:paddingBottom="25dp"
            android:text="Top"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@id/gridView1"
            app:layout_constraintWidth="match_constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/gridView1" />

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintWidth="match_constraint"
            app:layout_constraintBottom_toTopOf="@+id/textComment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gridHeader3"
            app:layout_constraintTop_toBottomOf="@+id/textView">
        </GridView>

        <EditText
            android:id="@+id/textComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:autofillHints=""
            android:hint="Comments about Auto"
            android:inputType="text"
            android:textSize="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>