<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".Auto">

    <!--We are using this image view to display our QR code-->

    <!--Edit text to enter text for creating a QR code-->
        <!--Button for creating a QR code-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/design_default_color_primary_dark"
            android:text="Auto"
            android:textColor="@color/white"
            android:textSize="52dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gridHeader3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Low"
            android:background="@color/red"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="16dp"

            app:layout_constraintEnd_toStartOf="@id/gridView1"
            app:layout_constraintBottom_toBottomOf="@id/gridView1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/gridHeader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Mid"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:background="@color/red"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@id/gridView1"
            app:layout_constraintWidth="match_constraint"
            app:layout_constraintBottom_toTopOf="@+id/gridHeader3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridHeader1" />

        <TextView
            android:id="@+id/gridHeader1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingTop="25dp"
            android:background="@color/red"
            android:paddingBottom="25dp"
            android:text="Top"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@id/gridView1"
            app:layout_constraintWidth="match_constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/gridView1" />

        <GridLayout
            android:id="@+id/gridView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="9"
            android:orientation="horizontal"
            android:rowCount="3"
            app:layout_constraintWidth="match_constraint"
            app:layout_constraintBottom_toTopOf="@+id/textComment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gridHeader3"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:context=".GridXMLActivity">

            <ImageButton
                android:id="@+id/T1"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="0"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T2"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:layout_row="0"
                android:layout_column="1"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cube" />

            <ImageButton
                android:id="@+id/T3"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="0"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T4"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:layout_row="0"
                android:layout_column="3"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T5"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="0"
                android:layout_column="4"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cube" />

            <ImageButton
                android:id="@+id/T6"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="0"
                android:layout_column="5"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T7"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="0"
                android:layout_column="6"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T8"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="0"
                android:layout_column="7"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cube" />

            <ImageButton
                android:id="@+id/T9"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="0"
                android:layout_column="8"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T10"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="1"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T11"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:layout_row="1"
                android:layout_column="1"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cube" />

            <ImageButton
                android:id="@+id/T12"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="1"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T13"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:layout_row="1"
                android:layout_column="3"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T14"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="1"
                android:layout_column="4"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cube" />

            <ImageButton
                android:id="@+id/T15"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="1"
                android:layout_column="5"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T16"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="1"
                android:layout_column="6"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T17"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="1"
                android:layout_column="7"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cube" />

            <ImageButton
                android:id="@+id/T18"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="1"
                android:layout_column="8"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T19"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="2"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T20"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:layout_row="2"
                android:layout_column="1"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cube" />

            <ImageButton
                android:id="@+id/T21"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="2"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T22"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:layout_row="2"
                android:layout_column="3"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T23"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="2"
                android:layout_column="4"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cube" />

            <ImageButton
                android:id="@+id/T24"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="2"
                android:layout_column="5"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T25"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="2"
                android:layout_column="6"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />

            <ImageButton
                android:id="@+id/T26"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="2"
                android:layout_column="7"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cube" />

            <ImageButton
                android:id="@+id/T27"
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"

                android:layout_row="2"
                android:layout_column="8"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_cone" />
        </GridLayout>

        <EditText
            android:id="@+id/textComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:autofillHints=""
            android:hint="Comments about Auto"
            android:inputType="text"
            android:textSize="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>