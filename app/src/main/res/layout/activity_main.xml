<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--We are using this image view to display our QR code-->


    <!--Edit text to enter text for creating a QR code-->

    <!--Button for creating a QR code-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textSize="26dp"
        android:text="Create a QR Code For Any Robot" />

    <EditText
        android:id="@+id/idInt1"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:textSize="26dp"
        android:autofillHints=""
        android:hint="Team Number"
        android:inputType="number" />

    <EditText
        android:id="@+id/idInt2"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Match Number"
        android:inputType="number"
        android:textSize="26dp" />
    <TextView
        android:id="@+id/header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Auto"
        android:textSize="26dp" />
    <EditText
        android:id="@+id/idEdt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-1dp"
        android:autofillHints=""
        android:hint="Elements in Grid"
        android:inputType="text"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/idEdt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:hint="Comments about Auto"
        android:inputType="text"
        android:textSize="26dp" />
    <Spinner
        android:id="@+id/SpeedSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="29dp"
        android:layout_marginTop="15dp"/>
    <Spinner
        android:id="@+id/DefenseSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="29dp"
        android:layout_marginTop="15dp"/>

    <Spinner
        android:id="@+id/DockingSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="29dp"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/idBtnGenerateQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="180dp"
        android:textSize="25dp"
        android:text="@string/generate_qr_code" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idQRFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:text="Open QR Code Folder"
        android:textSize="25dp" />
</LinearLayout>
</ScrollView>
